@model LoginModel

<div class="row justify-content-center" style="margin-top: 100px;">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header text-center bg-primary text-white">
                <h4>Giriş Yap</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="form-group my-3">
                        <label asp-for="Email">E-posta</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="E-posta adresinizi girin"
                            required>
                    </div>
                    <div class="form-group my-3">
                        <label asp-for="Password">Şifre</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="Şifrenizi girin"
                            required>
                    </div>
                    <button type="submit" class="btn btn-outline-primary btn-block" style="border-radius: 10px;">Giriş
                        Yap</button>
                </form>
            </div>
            <div class="card-footer text-center">
                <small>Hesabınız yok mu? <a asp-controller="Account" asp-action="Register">Kayıt Ol</a></small>
            </div>
        </div>
    </div>
</div>

<style>
    label {
        font-weight: bold;
    }
</style>