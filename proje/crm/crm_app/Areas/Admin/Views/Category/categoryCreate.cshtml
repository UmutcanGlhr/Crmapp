@model Category

<div class="text-center my-3">
    <h1>Kategori Oluştur</h1>
</div>

<div class="text-center my-3">
    <div class="col-5" style="margin-left: 330px;">
        <form asp-action="categoryCreate" method="post" class="my-3">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group my-3">
                <label asp-for="CategoryName"><b>Kategori Adı</b></label>
                <input type="text" asp-for="CategoryName" class="form-control my-3" required>
            </div>

            <button type="submit" class="form-control btn-outline-success">Oluştur</button>
        </form>
    </div>
</div>
