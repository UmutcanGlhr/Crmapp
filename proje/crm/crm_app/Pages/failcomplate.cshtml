@page
@addTagHelper * , Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container">
    <div class="error-message">
        <h1>Ödemeniz Başarısız!</h1>
        <p>Üzgünüz, ödemeniz alınamadı. Lütfen tekrar deneyin.</p>
        <p><strong>Kart Bilgilerinizi Kontrol Edininz</strong></p>
        <a class="btn" asp-action="Index" asp-controller="Profile">Ana Sayfaya Dön</a>
        <a  class="btn retry" asp-action="configureproduct" asp-controller="Profile">Tekrar Dene</a>
    </div>
</div>


<style>
    .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .error-message {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    .error-message h1 {
        color: #dc3545;
        /* Başarısız mesaj rengi */
    }

    .error-message p {
        color: #333333;
    }

    .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #007bff;
        /* Buton rengi */
        color: #ffffff;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s;
    }

    .btn:hover {
        background-color: #0056b3;
        /* Buton hover rengi */
    }

    .retry {
        background-color: #ffc107;
        /* Tekrar deneme buton rengi */
    }

    .retry:hover {
        background-color: #e0a800;
        /* Tekrar deneme buton hover rengi */
    }
</style>