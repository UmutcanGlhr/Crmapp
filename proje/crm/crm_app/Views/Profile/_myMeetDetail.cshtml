@model Meet

<div class="row shadow my-3">
    <div class="col-md-3 border-1 border-dark p-3 bg-light">
        <h5 class="display-17 text-center">
            <i class="fa fa-address-book text-danger"></i>
            <br>
            @Model.ad
            @Model.soyad
        </h5>
        <p>randevu tarihi : @Model.tarih</p>
        <p>randevu Saati : @Model.Saat</p>
        <p>telefon numarası : @Model.telefon</p>
        <p>Randevu Kodu : @Model.sorguKodu</p>
        <p class="rounded-2 p-3">

        </p>
    </div>
    <div class="col-md-9">
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between brand">
                <b>@Model.Şehir / @Model.ilçe ,  @Model.Adres</b>
            </li>
            <li class="list-group-item d-flex justify-content-between text-danger">
                @Model.Description
            </li>
        </ul>
        <div class="text-center mt-2 p-2">
            <form method="post" asp-action="Complete">
                <input type="hidden" name="id" value="@Model.meetID">
                <button type="submit" class="btn btn-primary">Tamamlandı</button>
                <input type="text" asp-for="MeetSlotID">
            </form>
            
        </div>

    </div>
</div>
