@model ProductDtoForUpdate

<div class="text-center my-3">
    <div class="display-6">Paket Oluştur</div>
</div>


<form method="post" asp-action="Update" enctype="multipart/form-data">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="ProductID">
    <div class="form-group my-3 ">
        <label asp-for="ProductName">Paket Adı</label>
        <input asp-for="ProductName" class="form-control" required />
    </div>
    <div class="form-group my-3 ">
        <label asp-for="price">Paketin Fiyatı</label>
        <input asp-for="price" class="form-control" required />
    </div>
    <div class="form-group my-3">
        <label asp-for="Description">Paket Açıklaması</label>
        <input asp-for="Description" class="form-control" required />
    </div>
    <div class="form-group my-3">
        <label asp-for="descrp">Paket Açıklaması</label>
        <input asp-for="descrp" class="form-control" required />
    </div>
    <div class="form-group my-3">
        <label asp-for="PaketSüresi">Paket Süresi</label>
        <input asp-for="PaketSüresi" class="form-control" required />
    </div>
    
    <div class="form-group my-3">
        <label asp-for="DenemeSüresi">DenemeSüresi</label>
        <input asp-for="DenemeSüresi" class="form-control" required />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-success" type="submit">
                <i class="fa fa-save"></i>
                Güncelle
            </button>
            <a asp-action="Index" class="btn btn-outline-success">
                <i class="fa fa-list"></i>
                Paketler
            </a>
        </div>
    </div>
</form>