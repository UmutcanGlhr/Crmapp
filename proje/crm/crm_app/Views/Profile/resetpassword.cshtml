@model ResetPasswordDto
@{
    Layout = null;
}
<link href="~/css/bootstrap.min.css" rel="stylesheet">
<div class="row">
    @if (User.Identity.IsAuthenticated)
    {
        <div class="row" style="margin-top: 2.3rem;">
            <div class="col-md-2" style="margin-left: 20px;">
                <partial name="_ProfilSideBar" />
            </div>
            <div class="col" style="margin-left: 1.3rem;">
                <div class="col-md-9 mx-3 my-5  ">
                    <div class="text-danger" asp-validation-summary="All"></div>
                    <form asp-action="resetpassword" method="post">
                        <div class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-group my-3">
                            <label asp-for="Password"></label>
                            <input asp-for="Password" class="form-control" required>

                        </div>
                        <div class="form-group my-3">
                            <label asp-for="ConfirmPassword"></label>
                            <input asp-for="ConfirmPassword" class="form-control" required>
                        </div>

                        <button type="submit" class="btn btn-outline-success form-control">
                            <i class="fa fa-solid fa-key"></i>
                            Kaydet </button>
                    </form>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="display-6 text-center my-5">
            <div class="text-danger ">
                User not found
            </div>
        </div>
    }

</div>
