@model IEnumerable<Meet>
@{
    Layout = null;
}
<link href="~/css/bootstrap.min.css" rel="stylesheet">

<div class="row" style="margin-top: 2.3rem;">
    <div class="col-md-2" style="margin-left: 0;">
        <partial name="_ProfilSideBar" />
    </div>
    <div class="col-md-7" style="margin-left: 100px;">
        <h3>Randevular</h2>
            @if (Model.Count() > 0)
            {
                <div class="my-3">
                    @foreach (var meet in Model)
                    {

                        <div class="row shadow my-3">
                            <div class="col-md-3 border-1 border-dark p-3 bg-light">
                                <h5 class="display-17 text-center">
                                    <i class="fa fa-address-book text-danger"></i>
                                    <br>
                                    @meet.ad
                                    @meet.soyad
                                </h5>
                                <p>randevu Tarihi : @meet.tarih</p>
                                <p>randevu Saati : @meet.Saat</p>
                                <p>telefon numarası : @meet.telefon</p>
                                <p class="rounded-2 p-3">

                                </p>
                            </div>
                            <div class="col-md-9">
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between brand">
                                        <b>Şehir ilçe</b>
                                    </li>

                                    <li class="list-group-item d-flex justify-content-between text-danger">
                                        @meet.Adres
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between text-danger">
                                        @meet.Description
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between text-danger">
                                        @meet.active
                                    </li>
                                </ul>
                            </div>
                        </div>


                    }
                </div>
            }
    </div>
</div>