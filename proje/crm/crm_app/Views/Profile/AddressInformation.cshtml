@model IEnumerable<Adress>

<div class="profile">
    <aside>
        <partial name="_profileSideBar" />
    </aside>

    <div class="profile_left">

        @if (Model.Count() > 0)
        {
            @foreach (var add in Model)
            {
                <div class="row shadow my-3">
                    <div class="col-md-3 border-1 border-dark p-3 bg-light">
                        <h5 class="display-5 text-center">
                            <i class="fa fa-address-book text-danger"></i>
                            <br>
                        </h5>
                    </div>
                    <div class="col-md-6">
                        <h5>@add.CityName</h5>
                        <p>@add.AddressName</p>
                        <p>@add.DistrictName</p>
                        <p>@add.ZipCode</p>
                    </div>
                    <div class="col">
                        <a asp-action="Delete" asp-route-id="@add.AddressID" class="btn btn-danger my-4 mx-5">
                            <i class="fa-solid fa-trash"></i>
                            Delete</a>
                    </div>

                </div>

            }

        }
        else
        {
            <div class="alert alert-info">
                <p class="lead">There is no Address yet</p>
            </div>

        }


        <a asp-controller="Profile" asp-action="AdressCreate">adres ekle</a>
    </div>
</div>
